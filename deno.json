{
    "tasks": {
        "www": "deno run -A cmd/www/main.ts",
        "cache": "deno cache deps.ts",
        "test": "echo \"hello\""
    },
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx"
    },
    "imports": {
        "~/deps.ts": "./deps.ts",
        "$libsql/": "https://esm.sh/v133/@libsql/client@0.3.5/lib-esm/",
        "$hono/": "https://deno.land/x/hono@v3.7.6/",
        "hono/jsx/jsx-runtime": "https://deno.land/x/hono@v3.7.6/jsx/jsx-runtime.ts",
        "$std/": "https://deno.land/std@0.203.0/"
    },
    "fmt": {
        "useTabs": false,
        "singleQuote": false,
        "semiColons": true,
        "indentWidth": 4,
        "exclude": ["x/"]
    },
    "lint": {
        "exclude": ["x/"]
    }
}
